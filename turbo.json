{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "CLERK_SECRET_KEY",
    "DATABASE_URL",
    "BETTER_AUTH_SECRET",
    "ARCJET_KEY",
    "AXIOM_TOKEN",
    "AXIOM_DATASET"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "NEXT_PUBLIC_*",
        "POSTHOG_API_KEY",
        "POSTHOG_ENV_ID",
        "RESEND_API_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["NEXT_PUBLIC_*"]
    },
    "dev:setup": {
      "cache": false,
      "persistent": true
    }
  }
}
